#include <stdio.h>
#include <string.h>

#define MAX 100

struct File {
    char name[20];
    int start;
    int length;
};

int main() {
    struct File files[MAX];
    int n, i, j;
    char record[50];

    printf("Enter number of files: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter file name: ");
        scanf("%s", files[i].name);
        printf("Enter starting block: ");
        scanf("%d", &files[i].start);
        printf("Enter length (number of records): ");
        scanf("%d", &files[i].length);
    }

    printf("\n--- Sequential File Allocation Simulation ---\n");
    for (i = 0; i < n; i++) {
        printf("\nFile: %s\n", files[i].name);
        printf("Blocks: ");
        for (j = 0; j < files[i].length; j++) {
            printf("%d ", files[i].start + j);
        }
        printf("\nAccessing records sequentially...\n");
        for (j = 1; j <= files[i].length; j++) {
            printf("Record %d of %s accessed\n", j, files[i].name);
        }
    }

    return 0;
}
