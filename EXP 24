#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd;
    char buf[100];

    // 1. Create or open file
    fd = open("example.txt", O_CREAT | O_RDWR, 0644);
    if(fd < 0) { perror("open"); return 1; }

    // 2. Write to file
    write(fd, "Hello UNIX file operations\n", 27);

    // 3. Move file pointer to beginning
    lseek(fd, 0, SEEK_SET);

    // 4. Read from file
    int n = read(fd, buf, sizeof(buf));
    buf[n] = '\0';
    printf("File content:\n%s", buf);

    // 5. Close file
    close(fd);

    return 0;
}
